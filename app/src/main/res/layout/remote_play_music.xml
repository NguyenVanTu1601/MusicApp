<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/text_remote_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/text_remote_prev"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@id/text_remote_music_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/ic_prev"
        android:backgroundTint="@android:color/black"/>

    <TextView
        android:id="@+id/text_remote_play"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@+id/text_remote_music_name"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@id/text_remote_prev"
        android:background="@drawable/ic_play"
        android:backgroundTint="@android:color/black"/>

    <TextView
        android:id="@+id/text_remote_next"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@+id/text_remote_music_name"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@id/text_remote_play"
        android:background="@drawable/ic_next"
        android:backgroundTint="@android:color/black"/>
</RelativeLayout>
